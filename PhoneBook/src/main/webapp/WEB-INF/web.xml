<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Servlets -->
    <servlet>
        <servlet-name>bookService</servlet-name>
        <servlet-class>ru.my.naumen.phonebook.server.BookService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bookService</servlet-name>
        <url-pattern>/phonebook/bookService</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>PhoneBook.html</welcome-file>
    </welcome-file-list>

</web-app>
